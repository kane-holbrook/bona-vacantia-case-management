    </formulas>
    <formulas>
        <name>diedAtAddressFormula</name>
        <dataType>Boolean</dataType>
        <expression>if({!diedAtAddress}&lt;&gt;&quot;&quot;, True, False)</expression>
    </formulas>
    <formulas>
        <name>grantOnFileFormula</name>
        <dataType>Boolean</dataType>
        <expression>if(ISNULL({!grantAmount}), False, True)</expression>
    </formulas>
    <formulas>
        <name>grantSelectedEventFormula</name>
        <dataType>Boolean</dataType>
        <expression>if(BEGINS({!caseType}, &quot;C1&quot;) || BEGINS({!caseType}, &quot;B&quot;), True, False)</expression>
    </formulas>
    <formulas>
        <name>kinLocatedFormula</name>
        <dataType>Boolean</dataType>
        <expression>if({!kinLocated}=&quot;Y&quot;, True, False)</expression>
    </formulas>
    <formulas>
        <name>maidenNameFormula</name>
        <dataType>Boolean</dataType>
        <expression>if({!maidenName}&lt;&gt;&quot;&quot;, True, False)</expression>
    </formulas>
    <formulas>
        <name>maidenNameValidationFormula</name>
        <dataType>Boolean</dataType>
        <expression>if({!gender}=&quot;F&quot;&amp;&amp;{!maritalStatus}&lt;&gt;&quot;spinster&quot;, True, False)</expression>
    </formulas>
    <formulas>
        <name>placeOfBirthFormula</name>
        <dataType>Boolean</dataType>
        <expression>if({!placeOfBirth}&lt;&gt;&quot;&quot;, True, False)</expression>
    </formulas>
    <formulas>
        <name>propertyCasesAndKinFormula</name>
        <dataType>Boolean</dataType>
        <expression>if({!kinLocated}=&quot;Y&quot;||BEGINS({!caseType}, &quot;B&quot;),True,False)</expression>
    </formulas>
    <formulas>
        <name>propertyCasesFormula</name>
        <dataType>Boolean</dataType>
        <expression>if(BEGINS({!caseType}, &quot;B&quot;), True, False)</expression>
    </formulas>
    <formulas>
        <name>reviewTypeFormula</name>
        <dataType>String</dataType>
        <expression>if(BEGINS({!Please_select_review_type},&quot;AO&quot;), &quot;AO&quot;, &quot;EO&quot;)</expression>
    </formulas>
    <formulas>
        <name>shortPlaceOfDeathFormula</name>
