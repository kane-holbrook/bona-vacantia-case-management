    <formulas>
        <name>birthCertificateFormula</name>
        <dataType>Boolean</dataType>
        <expression>if(BEGINS({!caseType}, &quot;B&quot;) || BEGINS({!caseType}, &quot;C1&quot;) || BEGINS({!caseType}, &quot;D2&quot;), True, False)</expression>
    </formulas>
    <formulas>
        <name>caseReviewedDateFormula</name>
        <dataType>Boolean</dataType>
        <expression>if(ADDMONTHS({!caseReviewedDate}, 6)&lt;=TODAY(), True, False)</expression>
    </formulas>
    <formulas>
        <name>caseSheetQuestionsFormula</name>
        <dataType>Boolean</dataType>
        <expression>if(BEGINS({!caseType}, &quot;D1&quot;) || BEGINS({!caseType}, &quot;D2&quot;) || BEGINS({!caseType}, &quot;C1&quot;) || BEGINS({!caseType}, &quot;B&quot;) || BEGINS({!caseType}, &quot;YA&quot;), True, False)</expression>
    </formulas>
    <formulas>
        <name>currentDateCasting</name>
