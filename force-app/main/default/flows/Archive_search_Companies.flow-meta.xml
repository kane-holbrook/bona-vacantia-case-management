    <formulas>
        <name>Add14WorkingDays</name>
        <dataType>Date</dataType>
        <expression>CASE(
    MOD(TODAY() - DATE(1985,6,24), 7), 
    0, TODAY() + 20,  /* Sunday */
    1, TODAY() + 18,  /* Monday */
    2, TODAY() + 18,  /* Tuesday */
    3, TODAY() + 18,  /* Wednesday */
    4, TODAY() + 18,  /* Thursday */
    5, TODAY() + 18,  /* Friday */
    6, TODAY() + 22,  /* Saturday */
    TODAY()
)</expression>
    </formulas>
    <formulas>
        <name>AddDays</name>
        <dataType>Date</dataType>
        <expression>TODAY() + 21</expression>
    </formulas>
